<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back8"
    tools:context=".activities.LoginActivity">
    <TextView
        android:id="@+id/version_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Version 1.0"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        android:gravity="center"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/version_title"
        android:layout_marginTop="15dp"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_border">
        <EditText
            android:id="@+id/username"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:hint="Username"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:paddingLeft="15dp"
            android:textCursorDrawable="@null"
            android:gravity="center_vertical"
            android:background="#ebeaea"
            android:drawableLeft="@drawable/username"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:drawablePadding="8dp"
            android:layout_below="@+id/username"
            android:hint="Password"
            android:singleLine="true"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:inputType="numberPassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="#ebeaea"
            android:drawableLeft="@drawable/password" />
        <CheckBox
            android:id="@+id/saveLoginCheckBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/password"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Remember Me?"
            android:buttonTint="#009688"
            android:textColor="#000" />
        <Button
            android:id="@+id/loginBut"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saveLoginCheckBox"
            android:layout_marginLeft="30dp"
            android:text="Login"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button_bg_green" />
        <!--<TextView-->
        <!--android:id="@+id/textView"-->
        <!--android:layout_width="180dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_below="@+id/loginBut"-->
        <!--android:text="Do not have an account yet?"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="14sp"/>-->
        <Button
            android:id="@+id/account"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/loginBut"
            android:layout_below="@+id/saveLoginCheckBox"
            android:text="Sign-Up"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button" />
        <TextView
            android:id="@+id/textViewForgot"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/account"
            android:text="Forgot your password?"
            android:layout_marginLeft="120dp"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
