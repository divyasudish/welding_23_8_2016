    <RelativeLayout
        android:id="@+id/relL"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/arc"
        android:layout_below="@+id/title">
        <TextView
            android:id="@+id/pos"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Position(mm)"/>
        <EditText
            android:id="@+id/posText"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:gravity="left"
            android:inputType="number"
            android:layout_below="@+id/pos"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext_border"/>
        <TextView
            android:id="@+id/velocity"
            android:layout_width="180dp"
            android:layout_height="22dp"
            android:textColor="#000000"
            android:text="Velocity(mm/s)"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/posText" />
        <EditText
            android:id="@+id/velocityText"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:gravity="left"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext_border"
            android:layout_below="@+id/velocity"/>
        <TextView
            android:id="@+id/ramp"
            android:layout_width="180dp"
            android:layout_height="22dp"
            android:textColor="#000000"
            android:text="Ramp(msec)"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/velocityText" />
        <EditText
            android:id="@+id/rampText"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:gravity="left"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext_border"
            android:layout_below="@+id/ramp"/>
