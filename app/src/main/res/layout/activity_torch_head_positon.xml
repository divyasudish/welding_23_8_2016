                android:layout_height="30dp"
                android:text="X"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_margin="1dp"
                android:background="#FFFFFF"/>
            <TextView android:layout_width="70dp"
                android:layout_height="30dp"
