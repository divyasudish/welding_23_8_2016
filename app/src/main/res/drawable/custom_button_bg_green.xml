<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="#e3e8e4"
                android:endColor="#e3e8e4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#07110c" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#00BFFF"
                android:endColor="#00BFFF"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#07110c" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#00BFFF"
                android:startColor="#00BFFF"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#07110c" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#b9e5d2"
                android:startColor="#80CBC4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#7e7e7e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>