<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.taal.welding.activities.SensorActivity"
    android:background="@drawable/back8">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Calibration"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="360dp"
        android:layout_height="440dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        android:background="@drawable/edittext_border">
        <TextView
            android:id="@+id/goHomeText"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginTop="6dp"
            android:text="Go Home"
            android:gravity="center"/>
        <Button
            android:id="@+id/SetForwordHome"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:text="Go Forward"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/goHomeText"
            android:background="@drawable/custom_button" />
        <Button
            android:id="@+id/setBackward"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="Go Back"
            android:textAllCaps="false"
            android:layout_toRightOf="@+id/SetForwordHome"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/goHomeText"
            android:background="@drawable/custom_button"/>
        <TextView
            android:id="@+id/Initial"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text=""
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/SetForwordHome"
            android:gravity="center_horizontal"/>
        <TableLayout
            android:id="@+id/table1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:background="#000000"
            android:layout_below="@+id/Initial">
            <TableRow android:id="@+id/tableRow1"
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="IMU Values"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:background="#FFFFFF"/>
                <TextView android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="X"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
                <TextView android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="Y"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
                <TextView android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="Z"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>


            </TableRow>
            <TableRow android:id="@+id/tableRow2"
                android:layout_width="330dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Accel"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/accX"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/accY"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/accZ"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
            </TableRow>
            <TableRow android:id="@+id/tableRow3"
                android:layout_width="320dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Gyro"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/gyroX"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/gyroY"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/gyroZ"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
            </TableRow>
            <TableRow android:id="@+id/tableRow4"
                android:layout_width="330dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:text="Magneto"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/magX"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/magY"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/magZ"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="0"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/table2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:layout_below="@+id/table1">
            <TableRow android:id="@+id/tableRow5"
                android:layout_width="330dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:text="Gear Box ratio (mm)"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:enabled="false"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/gbrText"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:inputType="number"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
            </TableRow>
            <TableRow android:id="@+id/tableRow6"
                android:layout_width="330dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:text="Band Dia (mm)"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:enabled="false"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/bracketText"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:text="0"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
            </TableRow>
            <TableRow android:id="@+id/tableRow7"
                android:layout_width="330dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:text="Gear Wheel dia (mm)"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:enabled="false"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/gearText"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:text="0"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"/>
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/calibrateBut"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:text="Calibrate"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/table2"
            android:background="@drawable/custom_button_bg_green" />
        <Button
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:text="Save"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/table2"
            android:layout_toRightOf="@+id/calibrateBut"
            android:background="@drawable/custom_button_bg_green" />
        <TextView
            android:id="@+id/calbrate"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text=""
            android:layout_below="@+id/save"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/stopSensor"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:text="Stop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/Gyro"
            android:layout_toRightOf="@+id/save"
            android:background="@drawable/custom_button_bg_green" />
        <Button
            android:id="@+id/Gyro"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:text="GearBox"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/table2"
            android:layout_toRightOf="@+id/save"
            android:background="@drawable/custom_button_bg_green" />
    </RelativeLayout>
</RelativeLayout>
