<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF6600"
                android:endColor="#FF4500"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#7e7e7e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FF4500"
                android:startColor="#FF6600"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#7e7e7e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#84FFFF"
                android:startColor="#FF80AB"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#7e7e7e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>