                android:layout_margin="1dp"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/accelY"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="0"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_margin="1dp"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/accelZ"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="0"
